{
  "compilerOptions": {
    "target": "es2016",
    "lib": ["es5", "es6", "dom"],
    "module": "Node16",
    "moduleResolution": "Node16",
    "outDir": "./dist",
    "removeComments": true,
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
  },
  "include": ["src/**/*"],
  "exclude": ["node_modules"],
}
